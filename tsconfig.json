{
  "compilerOptions": {
    "strict": true,
		"target": "es2019",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,    
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames":true,
    "resolveJsonModule": true
  },
  "include": [
		"src/**/*.ts",
    "src/**/.env.dev"
	],
	"exclude": [
		".yarn",
		"**/*.test.*"
	]
}
